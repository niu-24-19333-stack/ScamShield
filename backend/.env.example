# ===========================================
# ScamShield - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Application Settings
# ===========================================
APP_NAME=ScamShield
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# ===========================================
# Server Settings
# ===========================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ===========================================
# Security
# ===========================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Database (MongoDB)
# ===========================================
MONGODB_URL=mongodb://localhost:27017/scamshield
MONGODB_DB_NAME=scamshield

# For Docker deployment:
# MONGODB_URL=mongodb://mongodb:27017/scamshield

# ===========================================
# Redis Cache (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===========================================
# AI Providers (FREE Tiers)
# ===========================================
# Groq API (Free tier: 30 req/min)
GROQ_API_KEY=your-groq-api-key

# Google Gemini (Free tier: 60 req/min)
GOOGLE_API_KEY=your-google-api-key

# ===========================================
# OAuth Settings
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ===========================================
# Email Settings (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@scamshield.io

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ===========================================
# CORS Settings
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5500,https://scamshield.io
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===========================================
# Monitoring (Optional)
# ===========================================
SENTRY_DSN=
